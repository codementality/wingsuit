{%- set image -%}{{- image -}}{% endset %}
{% embed "@organisms/container/container.twig" with { padding_top: 'default', 'width': 'small', padding_bottom: 'default' } %}
  {% block content %}
    <div class="text-gray-dark">
      {% include "@atoms/headline/headline.twig" with {
        headline: headline,
        variant: 'h1'
      } only %}
    </div>
    <div class="pt-8">
      {% block lead %}
        {{ lead }}
      {% endblock %}
    </div>
  {% endblock %}
{% endembed %}
{% if image is not empty %}
{% embed "@organisms/container/container.twig" with { width: 'default', image: image } only %}
  {% block content %}
    {% block image %}
      {{ image }}
    {% endblock %}
  {% endblock %}
{% endembed %}
{% endif %}
{% embed "@organisms/container/container.twig" with { width: 'small', text: text } %}
  {% block content %}
    {% block text %}
      {{ text }}
    {% endblock %}
  {% endblock %}
{% endembed %}
